# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DATABASE_URL=postgresql://invoice_user:invoice_pass@db:5432/invoice_app
REDIS_URL=redis://redis:6379/0

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Enable Google Drive API and Google Sheets API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URI: http://localhost:5000/auth/callback
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/callback

# Anthropic Claude API
# Get this from: https://console.anthropic.com/
# 1. Sign up or log in
# 2. Navigate to API Keys
# 3. Create a new key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Application Settings
MAX_CONTENT_LENGTH=104857600  # 100MB max file size
UPLOAD_FOLDER=/tmp/invoices

# Production Settings (uncomment for production)
# FLASK_ENV=production
# SECRET_KEY=<generate-with-python3 -c 'import secrets; print(secrets.token_hex(32))'>
# DATABASE_URL=<your-production-database-url>
# REDIS_URL=<your-production-redis-url>
# GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/callback
