[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    migrations

ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by max-line-length)
    E501

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

max-complexity = 10
